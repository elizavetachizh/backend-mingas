<h2 class="page-title">Добавление информации</h2>
<br><br>
<a href="/admin/admin_tenders" class="btn btn-primary">Показать все тендеры</a>
<br><br>

<form method="post" action="/admin/admin_tenders/add-tender/">

    <div class="form-group">
        <label for="ta">Описание</label>
         <textarea name="content" id="ta" class="form-control" cols="30" rows="10" placeholder="content"><%= content %></textarea>
    </div>

    <button class="btn btn-default">Добавить</button>

          <% if (errors) {%>
              <% errors.forEach(function(error) { %>
              <div class="alert alert-danger">
                  <%= error.msg %>
              </div>
              <% });%>
          <% }%>
</form>
