<h2 class="page-title">edit product</h2>
<a href="/admin/admin_article" class="btn btn-primary">Назад ко всем статьям</a>
<br><br>

<form method="post" action="/admin/admin_article/edit-article/<%= id %>" >

    <div class="form-group">
        <label for="ta">Контент</label>
       <textarea type="text" class="form-control" name="content"  id="ta" placeholder="content"><%= content %></textarea>
    </div>

    <div class="form-group">
        <label for="">Картинка</label>
        <input type="file" class="form-control" name="image" id="img">
        <img src="#" id="imgPreview" alt="">
    </div>

            <div class="form-group">
                  <label for="button">Кнопка</label>
                  <input type="text" class="form-control" id="button" name="button" value="<%= button %>" placeholder="button">
              </div>
                <div class="form-group">
                      <label for="link">Ссылка на пост (если необходимо)</label>
                      <input type="text" id="link" class="form-control" name="link" value="<%= link %>" placeholder="link">
                  </div>
    <button class="btn btn-default">Сохранить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>

</form>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/basic.css"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/dropzone.css"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/dropzone.js"></script>
<script>

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#img").change(function() {
        readURL(this);
    });

</script>
