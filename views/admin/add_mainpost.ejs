<h2 class="page-title">Добавить статью</h2>
<br><br>
<a href="/admin/admin_mainpost" class="btn btn-primary">Показать все статьи</a>
<br><br>

<form method="post" action="/admin/admin_mainpost/add-mainpost" enctype="multipart/form-data">

   <div class="form-group">
          <label for="name">Название поста</label>
          <input type="text" class="form-control" name="name" value="<%= name %>">

      </div>
    <div class="form-group">
        <label for="">type</label>
        <input type="text" class="form-control" name="type" value="<%= type %>" placeholder="type">
    </div>
     <div class="form-group">
            <label for="description">Информация по посту</label>
            <textarea type="text" class="form-control" id="ta" name="description" placeholder="description"><%= description %></textarea>
        </div>
    <button class="btn btn-default">Добавить</button>

          <% if (errors) {%>
              <% errors.forEach(function(error) { %>
              <div class="alert alert-danger">
                  <%= error.msg %>
              </div>
              <% });%>
          <% }%>
</form>
