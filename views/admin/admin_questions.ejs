<h2 class="page-title">Подразделения МИНГАЗ</h2>
<a href="/admin/admin_questions/add-questions" class="btn btn-primary">Добавить новые вопрос-ответ</a>
<br><br>
<% if (count > 0) { %>
    <table class="table table-striped sorting">

        <thead>
        <tr class="home">
            <th>id</th>
            <th>Вопрос</th>
            <th>Ответ</th>
            <th>edit</th>
            <th>delete</th>
        </tr>
        </thead>
        <tbody>
        <% questions.forEach(function(el){ %>
            <tr>
                <td><%= el.id %></td>
                <td><%= el.question %></td>
                <td><div style="width: 600px"><%= el.answer %></div></td>
                <td><a href="/admin/admin_questions/edit-questions/<%= el._id %>">edit</a></td>
                <td><a class="confirmDeletion" href="/admin/admin_questions/delete-questions/<%= el._id %>">delete</a></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
<% } else {%>
    <h3 class="text-center">Нет ни одного созданного вопроса-ответа</h3>
<% }%>