<div>
    <h2 class="page-title">Реализация неликвидов</h2>
    <a href="/admin/admin_illiquids/upload" class="btn btn-primary">Загрузить новых неликвидов (pdf, word)</a>
    <br><br>
    <% if (count > 0) { %>
        <table class="table table-striped sorting">

            <thead>
            <tr class="home">
                <th>Наименование</th>
                <th>Документ</th>
                <th>Дата</th>
                <th>Скачать</th>
                <th>Удалить</th>
            </tr>
            </thead>
            <tbody>
            <% files.forEach(file => { %>
                <tr>
                    <td><p><%= file.name %></p></td>
                    <td><p><%= file.file %></p></td>
                    <td><p><%= file.date %></p></td>
                    <td><a href="/admin/admin_illiquids/edit-illiquid/<%= file.id %>">Отредактировать</a></td>
                    <td><a class="confirmDeletion" href="/admin/admin_illiquids/delete-illiquid/<%= file.id %>">Удалить</a></td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    <% } else {%>
        <h3 class="text-center">Нет ни одного файла</h3>
    <% }%>

</div>




