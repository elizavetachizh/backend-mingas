<div  style="width: 80%; margin: 0 auto">
<h2 class="page-title">Редактирование</h2>
<a href="/admin/admin-business-tabs" class="btn btn-primary">Назад</a>
<br><br>

<form method="post" action="/admin/admin-business-tabs/edit-content/<%= id %>" enctype="multipart/form-data">

    <div class="form-group">
        <label for="name">Наименование</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="name" value="<%= name %>" />
    </div>

    <div class="form-group">
        <label for="link">Ссылка</label>
        <input type="text" class="form-control" id="link" name="link"  placeholder="Ссылка" value="<%= link %>"/>
    </div>
    <div class="form-group">
        <label for="file">Заменить иконку для вкладки</label>
        <input type="file"
               name="file"
               id="file"
               class="form-control-file border"  />
    </div>

        <img style="width: 400px" alt="<%= image %>" src="<%= image %>" />

    <button class="btn btn-default">Сохранить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>
</div>
