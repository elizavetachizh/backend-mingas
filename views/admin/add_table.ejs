<h2 class="page-title">Добавление информации</h2>
<br><br>
<a href="/admin/admin_table" class="btn btn-primary">Показать все</a>
<br><br>

<form method="post" action="/admin/admin_table/add-table/" >

    <div class="form-group">
        <label for="ta">Описание</label>
        <textarea name="name" id="ta" class="form-control" cols="30" rows="10" placeholder="name"><%= name %></textarea>
    </div>

    <button class="btn btn-default">Добавить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>
