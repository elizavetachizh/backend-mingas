<form method="post" action="/admin/documentations/upload" enctype="multipart/form-data">

    <div class="form-group">
        <label for="input-files">Файл</label>
        <input
                type="file"
                name="files"
                id="input-files"
                class="form-control-file border" multiple required
        />
    </div>
    <div class="form-group">
        <label for="folderIndex">Номер папки:</label>
        <input type="text" name="folderIndex" id="folderIndex"  class="form-control"  required>
    </div>

    <div class="form-group">
        <label for="fileType">Выберите тип файлов</label>
        <select name="fileType" id="fileType">
            <option value="" disabled selected>Выберите тип файлов</option>
            <option value="certificates">Сертификаты</option>
            <option value="testimonies">Свидетельства</option>
            <option value="licenses">Лицензии</option>
            <option value="attestations">Аттестаты</option>
        </select>

    </div>
    <button class="btn btn-default">Добавить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>