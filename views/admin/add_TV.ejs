<h2 class="page-title">Добавить новую ссылку</h2>
<br><br>
<a href="/admin/admin_TV" class="btn btn-primary">Показать все созданные ссылки</a>
<br><br>

<form method="post" action="/admin/admin_TV/add-info">

    <div class="form-group">
        <label for="name">Название</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= name %>" placeholder="name">
    </div>

    <div class="form-group">
        <label for="link">Ссылка</label>
        <input type="text" class="form-control" id="link" name="link" value="<%= link %>" placeholder="link">
    </div>

    <button class="btn btn-default">Добавить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>