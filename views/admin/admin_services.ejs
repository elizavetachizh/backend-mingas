<h2 class="page-title">Услуги</h2>
<a href="/admin/admin_services/add-services" class="btn btn-primary">Добавить новую услугу</a>
<br><br>

<table class="table table-striped sorting">

    <thead>
      <tr class="home">
                  <th>image</th>
                  <th>name</th>
          <th>type</th>
                  <th>description</th>
                  <th>edit</th>
                  <th>delete</th>
              </tr>
    </thead>
     <tbody>
            <% services.forEach(function(service){ %>
            <tr>
                <td>
                    <% if (service.image == "") { %>
                        <img id="noimage" src="/images/noimage.png">
                    <% } else {%>
                        <img id="noimage" src="/public/images/<%= service.image %>">
                    <% }%>
                </td>
  <td><%= service.name %></td>
                <td><%= service.type %></td>
  <td>  <% service.description.forEach(function(el){ %> <p><%= el %></p> <% }); %></td>

                <td><a href="/admin/admin_services/edit-services/<%= service._id %>">edit</a></td>
                <td><a class="confirmDeletion" href="/admin/admin_services/delete-services/<%= service._id %>">delete</a></td>
            </tr>
            <% }); %>
        </tbody>
</table>


