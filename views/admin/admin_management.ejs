
<h2 class="page-title">Управление</h2>
<a href="/admin/admin_management/add-men" class="btn btn-primary">Добавить нового человека</a>
<br><br>

<table class="table table-striped sorting">
    <thead>
      <tr class="home">
          <th>ФИО</th>
          <th>Должность</th>
          <th>Контактный номер телефона</th>
          <th>Email</th>
          <th>Подразделения в подчинении</th>
          <th>Фото</th>
          <th>редактировать</th>
          <th>Удалить</th>
      </tr>
    </thead>
     <tbody>
     <% management.forEach(function(men){ %>
         <tr>
             <td><%= men.fullName %></td>
             <td><%= men.position %></td>
             <td><%= men.contact_phone %></td>
             <td><%= men.email %></td>
    <td>
  <% men.department.forEach(function(e){ %>

  <p><%= e %></p>

   <% });%>
    </td>

                <td>
                    <% if (men.image === "") { %>
                    <img class='img' id="noimage" src="/images/noimage.png" alt="">
                    <% } else {%>
                    <img class='img' id="noimage" src="<%= men.image %>" alt="">
                    <% }%>
                </td>
                <td><a href="/admin/admin_management/edit-men/<%= men._id %>">Редактировать</a></td>
                <td><a class="confirmDeletion" href="/admin/admin_management/delete-men/<%= men._id %>">Удалить</a></td>
            </tr>
            <% }); %>
        </tbody>
</table>


<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
