<h2 class="page-title">Редактирование</h2>
<a href="/admin/admin_tenders" class="btn btn-primary">Назад ко всем тендерам</a>
<br><br>

<form method="post" action="/admin/admin_tenders/edit-tender/<%= id %>">

      <div class="form-group">
           <label for="ta">Информация</label>
            <textarea name="content" id="ta" class="form-control" cols="30" rows="10" placeholder="content"><%= content %></textarea>
       </div>

    <button class="btn btn-default">Сохранить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>
