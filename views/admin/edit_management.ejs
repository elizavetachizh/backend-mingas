<h2 class="page-title">Редактировани данных человека</h2>
<a href="/admin/admin_management" class="btn btn-primary">Назад</a>
<br><br>

<form method="post" action="/admin/admin_management/edit-men/<%= id %>">
    <div class="form-group">
        <label for="fullName">ФИО руководителя</label>
        <input type="text" class="form-control" id="fullName" name="fullName" value="<%= fullName %>" placeholder="fullName">
    </div>
    <div class="form-group">
        <label for="position">Должность руководителя</label>
        <input type="text" class="form-control" id="position" name="position" value="<%= position %>" placeholder="position">
    </div>
    <div class="form-group">
        <label for="department">Выбранные уже подразделения</label>
        <ul class="list-without-dots">
            <% department.forEach(function(dep){ %>
                <li>
                    <p><%= dep %></p>
                </li>
            <% }); %>
        </ul>
    </div>
    <div class="form-group">
        <label for="department">Выбрать подразделения</label>
        <ul class="list-without-dots">
            <% departments.forEach(function(dep){ %>
                <li>
                    <input type="checkbox" id="department" name="department" value="<%= dep.name %>"><%= dep.name %></input>
                </li>
            <% }); %>
        </ul>
    </div>
   <div class="form-group">
       <label for="image">Картинка</label>
       <input type="text" class="form-control" id="image" name="image" value="<%= image %>">
   </div>
    <button class="btn btn-default">Сохранить</button>
</form>
