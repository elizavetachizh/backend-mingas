<h2 class="page-title">Добавить статью</h2>
<br><br>
<a href="/admin/admin_article" class="btn btn-primary">Показать все статьи</a>
<br><br>

<form method="post" action="/admin/admin_article/add-article">

    <div class="form-group">
        <label for="ta">Контент</label>
        <textarea type="text" class="form-control"  id="ta" name="content" placeholder="content"><%= content %></textarea>
    </div>

    <div class="form-group">
        <label for="">Картинка</label>
        <input type="file" class="form-control" name="image" id="img" >
        <img src="#" id="imgPreview" alt="">
    </div>

 <div class="form-group">
        <label for="button">Кнопка</label>
        <input type="text" class="form-control" id="button" name="button" value="<%= button %>" placeholder="button">
    </div>
     <div class="form-group">
            <label for="link">Ссылка на пост (если необходимо)</label>
            <input type="text" class="form-control" id="link" name="link" value="<%= link %>" placeholder="link">
        </div>

    <button class="btn btn-default">Добавить</button>

          <% if (errors) {%>
              <% errors.forEach(function(error) { %>
              <div class="alert alert-danger">
                  <%= error.msg %>
              </div>
              <% });%>
          <% }%>
</form>

<script>

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#img").change(function() {
        readURL(this);
    });

</script>
