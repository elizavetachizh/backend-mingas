<h2 class="page-title">edit product</h2>
<a href="/admin/admin_mainpost" class="btn btn-primary">Назад ко всем статьям</a>
<br><br>

<form method="post" action="/admin/admin_mainpost/edit-mainpost/<%= id %>" >


     <div class="form-group">
               <label for="name">name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= name %>">
          </div>
    <div class="form-group">
        <label for="type">type</label>
        <input type="text" class="form-control" id="type" name="type" value="<%= type %>" placeholder="type">
    </div>
            <div class="form-group">
                  <label for="ta">description</label>
                  <textarea type="text" class="form-control" id="ta" name="description" placeholder="description"><%= description %></textarea>
              </div>

    <button class="btn btn-default">Сохранить</button>
    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>

