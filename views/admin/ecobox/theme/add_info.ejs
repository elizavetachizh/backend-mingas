<div  style="width: 80%; margin: 0 auto">

    <h2 class="page-title">Добавить пост</h2>
    <br><br>
    <a href="/admin/admin-ecobox-theme/" class="btn btn-primary">Показать список вкладок</a>
    <br><br>

    <form method="post" action="/admin/admin-ecobox-theme/add-content/">
        <div class="form-group">
            <label for="title">Наименование новой вкладки</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Наименование новой вкладки" />
        </div>

        <button class="btn btn-default">Добавить</button>

        <% if (errors) {%>
            <% errors.forEach(function(error) { %>
                <div class="alert alert-danger">
                    <%= error.msg %>
                </div>
            <% });%>
        <% }%>
    </form>
</div>

