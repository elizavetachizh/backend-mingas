<div  style="width: 80%; margin: 0 auto">
<h2 class="page-title">Редактирование</h2>
<a href="/admin/new_posts" class="btn btn-primary">Назад</a>
<br><br>

<form method="post" action="/admin/admin-ecobox-theme/edit-content/<%= id %>" >
    <div class="form-group">
        <label for="title">Наименование</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="title" value="<%= title %>" />
    </div>

    <button class="btn btn-default">Сохранить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>
</div>
