<div  style="width: 80%; margin: 0 auto">
<h2 class="page-title">Редактирование</h2>
<a href="/admin/new_posts" class="btn btn-primary">Назад</a>
<br><br>

<form method="post" action="/admin/admin-ecobox/edit-content/<%= id %>" enctype="multipart/form-data">

    <div class="form-group">
        <label for="theme">Выберите вкладку, к которой относится создаваемая информация:</label>
        <select class="form-control" id="theme" name="theme">
            <option>Выберите вкладку:</option>
            <% themes.forEach(post => { %>
                <option value="<%= post._id %>" <%= post._id.equals(theme) ? 'selected' : '' %>><%= post.title %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group">
        <label for="name">Наименование</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="name" value="<%= name %>" />
    </div>
    <div class="form-group">
        <label for="ta">Основная информация для статьи</label>
        <textarea type="text" class="form-control" id="ta" name="description" placeholder="description"><%= description %></textarea>
    </div>
    <div class="form-group">
        <label for="price">Стоимость</label>
        <input type="text" class="form-control" id="price" name="price"  placeholder="Стоимость" value="<%= price %>"/>
    </div>
    <div class="form-group">
        <label for="files">Новые картинки для статьи</label>
        <input type="file"
               name="files"
               id="files"
               class="form-control-file border" multiple />
    </div>
    <% images.forEach(image => { %>
        <img style="width: 400px" alt="<%= image %>" src="<%= image %>" />
    <% }) %>
    <button class="btn btn-default">Сохранить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>
</div>
