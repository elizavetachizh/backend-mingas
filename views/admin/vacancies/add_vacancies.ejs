<h2 class="page-title">Добавление вакансии</h2>
<br><br>
<a href="/admin/admin_vacancies" class="btn btn-primary">Показать все вакансии</a>
<br><br>

<form method="post" action="/admin/admin_vacancies/add-vacancy/">
    <div class="form-group">
        <label for="name">Название</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= name %>" placeholder="Название">
    </div>
    <div class="form-group">
        <label for="salary">Зарплата</label>
        <input type="text" class="form-control" id="salary" name="salary" value="<%= salary %>" placeholder="Зарплата">
    </div>
    <div class="form-group">
        <label for="work_experience">Опыт работы</label>
        <input type="text" class="form-control" id="work_experience" name="work_experience" value="<%= work_experience %>" placeholder="Опыт работы">
    </div>
    <div class="form-group">
        <label for="nature_of_work">Характер работы</label>
        <input type="text" class="form-control" id="nature_of_work" name="nature_of_work" value="<%= nature_of_work %>" placeholder="Характер работы">
    </div>
    <div class="form-group">
        <label for="schedule">График работы</label>
        <input type="text" class="form-control" id="schedule" name="schedule" value="<%= schedule %>" placeholder="График работы">
    </div>
    <div class="form-group">
        <label for="working_hours">Рабочие часы</label>
        <input type="text" class="form-control" id="working_hours" name="working_hours" value="<%= working_hours %>" placeholder="Рабочие часы">
    </div>
    <div class="form-group">
        <label for="work_format">Формат работы</label>
        <input type="text" class="form-control" id="work_format" name="work_format" value="<%= work_format %>" placeholder="Формат работы">
    </div>
    <div class="form-group">
        <label for="responsibilities">Обязанности</label>
        <textarea class="form-control" id="responsibilities" name="responsibilities" cols="30" rows="10" placeholder="Обязанности"><%= responsibilities %></textarea>
    </div>
    <div class="form-group">
        <label for="requirements">Требования</label>
        <textarea class="form-control" id="requirements" name="requirements" cols="30" rows="10"  placeholder="Требования"><%= requirements %></textarea>
    </div>
    <div class="form-group">
        <label for="conditions">Условия</label>
        <textarea class="form-control" id="conditions" name="conditions" cols="30" rows="10" placeholder="Условия"><%= conditions %></textarea>
    </div>
    <div class="form-group">
        <label for="ta">Содержание вакансии (дополнительно, если нужно)</label>
         <textarea name="description" id="ta" class="form-control" cols="30" rows="10" placeholder="description"><%= description %></textarea>
    </div>

    <button class="btn btn-default">Добавить</button>

          <% if (errors) {%>
              <% errors.forEach(function(error) { %>
              <div class="alert alert-danger">
                  <%= error.msg %>
              </div>
              <% });%>
          <% }%>
</form>
