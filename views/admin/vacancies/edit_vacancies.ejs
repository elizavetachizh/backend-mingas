<h2 class="page-title">Редактирование вакансии</h2>
<a href="/admin/admin_vacancies" class="btn btn-primary">Показать все вакансии</a>
<br><br>

<form method="post" action="/admin/admin_vacancies/edit-vacancy/<%= id %>">

    <div class="form-group">
        <label for="name">Название</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= name %>" placeholder="Название">
    </div>
    <div class="form-group">
        <label for="ta">Содержание вакансии</label>
        <textarea name="description" id="ta" class="form-control" cols="30" rows="10" placeholder="description"><%= description %></textarea>
    </div>

    <button class="btn btn-default">Сохранить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>
