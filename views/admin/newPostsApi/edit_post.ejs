<div  style="width: 80%; margin: 0 auto">
<h2 class="page-title">Редактирование</h2>
<a href="/admin/new_posts" class="btn btn-primary">Назад</a>
<br><br>

<form method="post" action="/admin/new_posts/edit-newpost/<%= id %>" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Имя (указать в случае, если на заглавной картинке нет текста):</label>
        <input type="text" name="name" id="name" value="<%= name %>" class="form-control">
    </div>

    <div class="form-group">
        <label for="date">Дата изменения:</label>
        <input type="date" name="date"  class="form-control" value="<%= date %>"  id="date">
    </div>

    <div class="form-group">
        <label for="content">Заголовок статьи (Обязательное поле)</label>
        <input type="text" class="form-control" id="content" name="content" value="<%= content %>" placeholder="Описание">
    </div>
    <div class="form-group">
        <label for="link">Ссылка на статью (указать в случае, если размещается статья не УП "МИНГАЗ")</label>
        <input class="form-control" id="link"  type="text" name="link" value="<%= link %>">
    </div>
    <div class="form-group">
        <label for="ta">Текст для статьи</label>
        <textarea type="text" class="form-control" id="ta" name="description" placeholder="description"><%= description %></textarea>
    </div>
    <div class="form-group">
        <label for="files">Картинки для статьи (первая загруженная будет являться заглавной)</label>
        <input type="file"
               name="files"
               id="files"
               class="form-control-file border" multiple />
    </div>
    <% images.forEach(image => { %>
        <img style="width: 400px" alt="<%= image %>" src="<%= image %>" />
    <% }) %>

    <button class="btn btn-default">Сохранить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>
</div>
