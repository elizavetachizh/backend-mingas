<h2 class="page-title">Редактирование</h2>
<a href="/admin/new_posts" class="btn btn-primary">Назад</a>
<br><br>

<form method="post" action="/admin/new_posts/edit-newpost/<%= id %>">
    <div class="form-group">
        <label for="name">Наименование статьи:</label>
        <input type="text" name="name" id="name" value="<%= name %>" class="form-control"  required>
    </div>

    <div class="form-group">
        <label for="date">Дата изменения:</label>
        <input type="date" name="date"  class="form-control" value="<%= date %>"  id="date">
    </div>

    <div class="form-group">
        <label for="content">Заголовок статьи (указать в случае, если это не локальная статья, а ссылка на нее)</label>
        <input type="text" class="form-control" id="content" name="content" value="<%= content %>" placeholder="Описание">
    </div>
    <div class="form-group">
        <label for="text-link">Ссылка на статью (указать в случае, если не это локальная статья)</label>
        <input class="form-control" id="text-link"  type="text" name="text" value="<%= text %>">
    </div>
    <div class="form-group">
        <label for="ta">Текст статьи</label>
        <textarea type="text" class="form-control" id="ta" name="description" placeholder="description"><%= description %></textarea>
    </div>

    <div class="form-group">
        <label for="ta-images">Картинки для статьи</label>
        <textarea type="text" class="form-control" id="ta-images" name="images" placeholder="images"><%= images %></textarea>
    </div>
    <button class="btn btn-default">Сохранить</button>

    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>
