<h2 class="page-title">Добавить пост</h2>
<br><br>
<a href="/admin/admin_posts" class="btn btn-primary">Показать все посты</a>
<br><br>

<form method="post" action="/admin/admin_posts/add-post/" enctype="multipart/form-data">

    <div class="form-group">
        <label for="link">Ссылка</label>
        <input type="text" class="form-control" name="link" value="<%= link %>" placeholder="Title">
    </div>

    <div class="form-group">
        <label for="content">Описание</label>
      <input type="text" class="form-control" name="content" value="<%= content %>" placeholder="Описание">
    </div>

    <div class="form-group">
        <label for="image">Картинка</label>
        <input type="text" class="form-control" name="image" id="img" value="<%= image %>">
    </div>

    <div class="form-group">
        <label for="">Дата добавления</label>
        <input type="date" class="form-control" name="date" id="date" value="<%= date %>">
    </div>
    <div class="form-group">
        <label for="">Предложенные статьи</label>
       <table>
           <thead>
           <tr>
               <th>Ссылка на статью</th>
               <th>Название статьи</th>
           </tr>
           </thead>
           <tbody>
           <tr>
               <td></td>
           </tr>
           <% mainPosts.map(function(post){ %>
               <tr>
                   <td>https://mingas.by/posts/<%= post._id %> </td>
                   <td><%= post.name %></td>
               </tr>
           <% }); %>
           </tbody></table>
    </div>
    <button class="btn btn-default">Добавить</button>

          <% if (errors) {%>
              <% errors.forEach(function(error) { %>
              <div class="alert alert-danger">
                  <%= error.msg %>
              </div>
              <% });%>
          <% }%>
</form>

<script>

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#img").change(function() {
        readURL(this);
    });

</script>