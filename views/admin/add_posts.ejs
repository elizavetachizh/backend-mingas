<h2 class="page-title">Добавить пост</h2>
<br><br>
<a href="/admin/admin_posts" class="btn btn-primary">Показать все посты</a>
<br><br>

<form method="post"  action="/admin/admin_posts/add-post/" enctype="multipart/form-data">

    <div class="form-group">
        <label for="file">Картинка</label>
        <input
                type="file"
                name="file"
                id="file"
                class="form-control-file border"
        />
    </div>

    <div class="form-group">
        <label for="date">Дата добавления</label>
        <input type="date" class="form-control" name="date" id="date" value="<%= date %>">
    </div>
    <div class="form-group">
        <label for="link">Выберете статью:</label>
        <select class="form-control" id="link" name="link">
            <option>Выберете статью:</option>
            <% mainPosts.forEach(post => { %>
                <option value="<%= post._id %>"><%= post.name %></option>
            <% }) %>
        </select>
    </div>

    <div class="form-group">
        <label for="name">Имя (указать в случае, если на картинке нет текста)</label>
        <input type="text" class="form-control"  id="name" name="name" placeholder="name">
    </div>

    <div class="form-group">
            <label for="content">Заголовок статьи (указать в случае, если не была выбрана статья, в противном случае название заполнится автоматически по выбранной статье)</label>
          <input type="text" class="form-control" id="content" name="content" value="<%= content %>" placeholder="Описание">
        </div>
    <div class="form-group">
        <label for="text-link">Ссылка на статью (указать в случае, если не была выбрана статья, в противном случае название заполнится автоматически по выбранной статье)</label>
        <input class="form-control" id="text-link"  type="text" name="text" value="<%= text %>">
    </div>
    <button class="btn btn-default">Добавить</button>

          <% if (errors) {%>
              <% errors.forEach(function(error) { %>
              <div class="alert alert-danger">
                  <%= error.msg %>
              </div>
              <% });%>
          <% }%>
</form>
