<h2 class="page-title">Добавить пост</h2>
<br><br>
<a href="/admin/admin_posts" class="btn btn-primary">Показать все посты</a>
<br><br>

<form method="post" action="/admin/admin_posts/add-post/" >

    <div class="form-group">
        <label for="content">Описание</label>
      <input type="text" class="form-control" id="content" name="content" value="<%= content %>" placeholder="Описание">
    </div>

    <div class="form-group">
        <label for="image">Картинка</label>
        <input type="text" class="form-control" id="image" name="image" value="<%= image %>">
    </div>

    <div class="form-group">
        <label for="date">Дата добавления</label>
        <input type="date" class="form-control" name="date" id="date" value="<%= date %>">
    </div>
    <div class="form-group">
        <label for="link">Выберете статью:</label>
        <select class="form-control" id="link" name="link">
            <% mainPosts.forEach(post => { %>
                <option value="<%= post._id %>"><%= post.name %></option>
            <% }) %>
        </select>
    </div>
    <button class="btn btn-default">Добавить</button>

          <% if (errors) {%>
              <% errors.forEach(function(error) { %>
              <div class="alert alert-danger">
                  <%= error.msg %>
              </div>
              <% });%>
          <% }%>
</form>
