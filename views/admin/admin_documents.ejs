<h2 class="page-title">Документы</h2>
<a href="/admin/admin_documents/add-documents" class="btn btn-primary">Добавить новый document</a>
<br><br>
<% if (count > 0) { %>
<table class="table table-striped sorting">

    <thead>
      <tr class="home">
          <th>id</th>
         <th>Название</th>
          <th>1 - физ. лица <br/> 2 - юр. лица</th>
           <th>Тип документа</th>
           <th>edit</th>
           <th>delete</th>
              </tr>
    </thead>
     <tbody>
            <% documents.forEach(function(document){ %>
            <tr>
                <td><%= document.id %></td>
                <td><%= document.name %></td>
                <td><%= document.type %></td>
                 <td><%= document.separation %></td>
                <td><a href="/admin/admin_documents/edit-documents/<%= document._id %>">edit</a></td>
                <td><a class="confirmDeletion" href="/admin/admin_documents/delete-documents/<%= document._id %>">delete</a></td>
            </tr>
            <% }); %>
        </tbody>
</table>
<% } else {%>
<h3 class="text-center">Нет ни одного созданного documents</h3>
<% }%>