<form method="post" action="/admin/admin_themes/edit-themes/<%= id %>" enctype="multipart/form-data">

    <div class="form-group">
        <label for="">Наименование темы вопросов</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="title">
    </div>

    <div class="form-group">
        <label for="">Выбранные вопросы</label>
        <ul class="list-without-dots">
            <% listOfQuestionAnswer.map(function(dep){ %>
                <% questionAnswer.map(function(el){ %>
                    <% if(el.toString() === dep._id.toString()) { %>
                        <li><%= dep.question %></li>
                    <% }%>
                <% }); %>
            <% }); %>
        </ul>
        <input type="text" class="form-control" name="questionAnswer" value="<%= questionAnswer %>" placeholder="questionAnswer">
    </div>
    <div class="form-group">
        <label for="">Вопросы</label>
        <ul class="list-without-dots">
            <% listOfQuestionAnswer.forEach(function(dep){ %>
                <li>  <input type="checkbox" name="department" value="<%= dep.question %>" > <%= dep.question %> <%= dep._id %></input></li>
            <% }); %>
        </ul>
    </div>
    <button class="btn btn-default">Добавить</button>

</form>
