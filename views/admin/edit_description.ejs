<h2 class="page-title">Редактирование ифнормации услуг</h2>
<a href="/admin/admin_description" class="btn btn-primary">Назад</a>
<br><br>

<form method="post" action="/admin/admin_description/edit-description/<%= id %>" enctype="multipart/form-data">

    <div class="form-group">
        <label for="">nameDescription</label>
        <input type="text" class="form-control" name="nameDescription" value="<%= nameDescription %>" placeholder="nameDescription">
    </div>

    <div class="form-group">
        <label for="">inform</label>
         <textarea name="inform" class="form-control" cols="30" id="ta"  rows="10" placeholder="inform"><%= inform %></textarea>

    </div>

    <button class="btn btn-default">Сохранить</button>
    <% if (errors) {%>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
        <% });%>
    <% }%>
</form>
