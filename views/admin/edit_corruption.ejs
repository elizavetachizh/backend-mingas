<h2 class="page-title">Редактировать ссылку</h2>
<a href="/admin/admin_corruption" class="btn btn-primary">Показать все ссылки</a>
<br><br>
<form method="post" action="/admin/admin_corruption/edit-element/<%= id %>" enctype="multipart/form-data">

    <div class="form-group">
        <label for="link">Ссылка</label>
        <input type="text" class="form-control" name="link" value="<%= link %>" placeholder="Title">
    </div>

    <div class="form-group">
        <label for="name">Имя</label>
        <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Описание">
    </div>

    <button class="btn btn-default">Сохранить</button>

        <% if (errors) {%>
            <% errors.forEach(function(error) { %>
                <div class="alert alert-danger">
                    <%= error.msg %>
                </div>
            <% });%>
        <% }%>
</form>
