<h2 class="page-title">Услуги</h2>
<a href="/admin/admin_prices/add-prices" class="btn btn-primary">Добавить новую услугу</a>
<br><br>

<table class="table table-striped sorting">

    <thead>
    <tr class="home">
        <th>document</th>
        <th>name</th>
        <th>edit</th>
        <th>delete</th>
    </tr>
    </thead>
    <tbody>
    <% prices.forEach(function(price){ %>
        <tr>
            <td>
                <% if (price.description == "") { %>
                    <img id="noimage" src="/images/noimage.png">
                <% } else {%>
                    <img id="noimage" src="/public/files/<%= price.description %>">
                <% }%>
            </td>
            <td><%= service.name %></td>

            <td><a href="/admin/admin_prices/edit-prices/<%= price._id %>">edit</a></td>
            <td><a class="confirmDeletion" href="/admin/admin_prices/delete-prices/<%= price._id %>">delete</a></td>
        </tr>
    <% }); %>
    </tbody>
</table>


